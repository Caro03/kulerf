{% extends "_layout" %}

{% block content %}

	<div class="section section--default">
		<div class="container">
			<div class="w-full md:w-3/4">
				{% include '_snippet/_content/_pageTitle' %}
				{% include '_snippet/_content/_intro' %}
			</div>
		</div>
	</div>

	<div class="section section--default">
		<div class="container">
			{% set collecties = craft.entries.section('collectieDetail').all() %}
			<a class="mr-5 font-bold uppercase pb-5 text-primary border-b-4 border-primary {% if craft.app.request.getQueryParam('collectie') == 1 %}text-tertiair border-none{% endif %}" href="{{ entry.url }}">{{ 'Alfabetisch weergeven'|t }}</a>
			<a class="font-bold uppercase {% if craft.app.request.getQueryParam('collectie') == 1 %}pb-5 text-primary border-b-4 border-primary{% endif %}" href="/collectie?collectie=1">{{ 'Weergeven op kaart'|t }}</a>
			<div class="mt-5 border-b-2 border-gray-500"></div>
		</div>
	</div>

	<div class="section section--default">
		<div class="container">
			<div class="md:-mx-4 md:flex md:flex-wrap">
				{% if craft.app.request.getQueryParam('collectie') == 1 %}
					{% for collectie in collecties %}
						{% if collectie.switchApp == 1 %}
							<div class="w8/12">
								<div class="w-64 h-64 js-google-map" data-locations='[{ "lat": 50.882170, "lng": 4.702510, "info": "Statik" }, { "lat": 50.881401, "lng": 4.715916, "info": "Station" }]' data-options="{}"></div>
							</div>
						{% endif %}
					{% endfor %}

				{% else %}
					{% for collectie in collecties|sort %}
						{% if collectie.switchApp == 0 %}
							{% include '_snippet/_item/_collectie' %}
						{% endif %}
					{% endfor %}
				{% endif %}
			</div>
		</div>
	</div>

{% endblock %}