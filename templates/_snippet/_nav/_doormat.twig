{% set doormatNav = craft.navigate.raw('doormatNav') %}
{% if doormatNav|length %}
	<nav class="" aria-label="{{ 'Footer'|t }}">
		<ul class="">
			{% for node in doormatNav %}
				{% if node.type == 'heading' %}
					<li class="{% if node.classes|length %}{{ node.classes }}{% endif %}">
						<h4>{{ node.name }}</h4>
					</li>
				{% else %}
					<li class="my-2 {% if node.classes|length %}{{ node.classes }}{% endif %}">
						<a href="{{ node.url }}" class="text-primary underline hover:no-underline{% if node.active %}active underline{% endif %}" {% if node.blank %} target="_blank" rel="noopener" {% endif %}>
							<svg class="w-5 h-5 text-primary icon" aria-hidden="true">
								<use xlink:href="/icon/sprite.svg#chevron-right"></use>
							</svg>
							{{ node.name }}
						</a>
					</li>
				{% endif %}
			{% endfor %}
		</ul>
	</nav>
{% endif %}
