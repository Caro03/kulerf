<div class="w-full mb-5 md:w-1/4 md:mx-4">
	<div class="h-full bg-light">
		{% set optimizedImage = bezoek.image|first.optimizedOverview %}
		<picture>
			{% if craft.imageOptimize.serverSupportsWebP() and bezoek.image|first.extension != 'svg' %}
				<source data-srcset="{{ optimizedImage.srcsetWebP() }}" sizes="(max-width: 479px) 99vw, (min-width: 480px) and (max-width: 659px) 431px, (min-width: 660px) and (max-width: 819px) 214px, (min-width: 820px) and (max-width: 979px) 252px, (min-width: 980px) and (max-width: 1199px) 327px, (min-width: 1200px) 395px" type="image/webp"/>
			{% endif %}
			<img src="{{ optimizedImage.placeholderBox() }}" data-srcset="{{ optimizedImage.srcset() }}" sizes="(max-width: 479px) 94vw, (min-width: 480px) and (max-width: 659px) 431px, (min-width: 660px) and (max-width: 819px) 214px, (min-width: 820px) and (max-width: 979px) 252px, (min-width: 980px) and (max-width: 1199px) 327px, (min-width: 1200px) 395px" alt="{{ bezoek.image|first.imageCaption ?? bezoek.image|first.title ?? entry.title }}" class="lazyload"/>
		</picture>
		<div class="p-4">
			<h2 class="text-xl uppercase">{{ bezoek.title }}</h2>
			<div class="mb-5">
				{{ bezoek.intro }}
			</div>
			<a class="link link-primary link--ext" href="{{ bezoek.url }}">{{ 'Bezoek plannen'|t }}</a>
		</div>
	</div>
</div>
