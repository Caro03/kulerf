<div class="relative w-full mb-5 group md:w-1/3 md:px-4">
	<div class="h-full bg-light">
		{% set optimizedImage = visit.image|first.optimizedOverview %}
		<picture>
			{% if craft.imageOptimize.serverSupportsWebP() and visit.image|first.extension != 'svg' %}
				<source data-srcset="{{ optimizedImage.srcsetWebP() }}" sizes="(max-width: 479px) 99vw, (min-width: 480px) and (max-width: 659px) 431px, (min-width: 660px) and (max-width: 819px) 214px, (min-width: 820px) and (max-width: 979px) 252px, (min-width: 980px) and (max-width: 1199px) 327px, (min-width: 1200px) 395px" type="image/webp"/>
			{% endif %}
			<img src="{{ optimizedImage.placeholderBox() }}" data-srcset="{{ optimizedImage.srcset() }}" sizes="(max-width: 479px) 94vw, (min-width: 480px) and (max-width: 659px) 431px, (min-width: 660px) and (max-width: 819px) 214px, (min-width: 820px) and (max-width: 979px) 252px, (min-width: 980px) and (max-width: 1199px) 327px, (min-width: 1200px) 395px" alt="{{ visit.image|first.imageCaption ?? visit.image|first.title ?? entry.title }}" class="lazyload"/>
		</picture>
		<div class="p-4">
			<h2 class="text-xl uppercase">
				<a class="link--extended" href="{{ visit.url }}">{{ visit.title }}</a>
			</h2>
			<div class="mb-5">
				{{ visit.intro }}
			</div>
			<a class="group-hover:no-underline link link-primary link--ext" href="{{ visit.url }}">{{ 'Bezoek plannen'|t }}</a>
		</div>
	</div>
</div>
