<div class="w-full mb-5 md:w-1/3 md:mx-4 md:mb-0">
	<div class="h-full bg-secondary">
		{% set optimizedImage = gids.image|first.optimizedOverview %}
		<picture>
			{% if craft.imageOptimize.serverSupportsWebP() and gids.image|first.extension != 'svg' %}
				<source data-srcset="{{ optimizedImage.srcsetWebP() }}" sizes="(max-width: 479px) 99vw, (min-width: 480px) and (max-width: 659px) 431px, (min-width: 660px) and (max-width: 819px) 214px, (min-width: 820px) and (max-width: 979px) 252px, (min-width: 980px) and (max-width: 1199px) 327px, (min-width: 1200px) 395px" type="image/webp"/>
			{% endif %}
			<img src="{{ optimizedImage.placeholderBox() }}" data-srcset="{{ optimizedImage.srcset() }}" sizes="(max-width: 479px) 94vw, (min-width: 480px) and (max-width: 659px) 431px, (min-width: 660px) and (max-width: 819px) 214px, (min-width: 820px) and (max-width: 979px) 252px, (min-width: 980px) and (max-width: 1199px) 327px, (min-width: 1200px) 395px" alt="{{ gids.image|first.imageCaption ?? gids.image|first.title ?? entry.title }}" class="lazyload"/>
		</picture>
		<div class="p-4">
			<h2>{{ gids.title }}</h2>
			<div class="mb-1 text-sm font-accent">
				{{ 'Duurtijd:'|t }}
				{{ gids.duration }}
				-
				{{ 'Afstand:'|t }}
				{{ gids.distance }}
			</div>
			{% if gids.switchGroup == 1 %}
				<div class="text-sm font-accent">{{ 'Enkel voor groepen - op aanvraag'|t }}</div>
			{% endif %}
			<div class="mt-5 mb-3">{{ gids.intro }}</div>
			<a class="link link-primary link--ext" href="{{ gids.url }}">{{ 'Wandeling bekijken'|t }}</a>
		</div>
	</div>
</div>
