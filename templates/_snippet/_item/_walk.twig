<div class="relative w-full mb-5 group md:w-1/3 md:px-4 md:mb-0">
	<div class="h-full bg-light">
		{% set optimizedImage = guide.image|first.optimizedOverview %}
		<picture>
			{% if craft.imageOptimize.serverSupportsWebP() and guide.image|first.extension != 'svg' %}
				<source data-srcset="{{ optimizedImage.srcsetWebP() }}" sizes="(max-width: 479px) 99vw, (min-width: 480px) and (max-width: 659px) 431px, (min-width: 660px) and (max-width: 819px) 214px, (min-width: 820px) and (max-width: 979px) 252px, (min-width: 980px) and (max-width: 1199px) 327px, (min-width: 1200px) 395px" type="image/webp"/>
			{% endif %}
			<img src="{{ optimizedImage.placeholderBox() }}" data-srcset="{{ optimizedImage.srcset() }}" sizes="(max-width: 479px) 94vw, (min-width: 480px) and (max-width: 659px) 431px, (min-width: 660px) and (max-width: 819px) 214px, (min-width: 820px) and (max-width: 979px) 252px, (min-width: 980px) and (max-width: 1199px) 327px, (min-width: 1200px) 395px" alt="{{ guide.image|first.imageCaption ?? guide.image|first.title ?? entry.title }}" class="lazyload"/>
		</picture>
		<div class="p-4">
			<h2 class="text-xl uppercase">
				<a class="link--extended" href="{{ guide.url }}">{{ guide.title }}</a>
			</h2>
			<div class="mb-1 text-sm font-accent">
				{{ 'Duurtijd:'|t }}
				{{ guide.duration }}
				-
				{{ 'Afstand:'|t }}
				{{ guide.distance }}
			</div>
			{% if guide.switchGroup == 1 %}
				<div class="text-sm font-accent">{{ 'Enkel voor groepen - op aanvraag'|t }}</div>
			{% endif %}
			<div class="mt-5 mb-3">{{ guide.intro }}</div>
			<a class="group-hover:no-underline link link-primary link--ext" href="{{ guide.url }}">{{ 'Wandeling bekijken'|t }}</a>
		</div>
	</div>
</div>
