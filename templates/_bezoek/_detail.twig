{% extends "_layout" %}

{% block content %}

	<div class="text-white bg-center bg-cover hero js-bg-target">
		<div class="w-full px-10 py-10 md:w-1/2 bg-secondary">
			<div class="section section--default">
				<div class="container">
					{% block breadcrumbs %}
						<div class="mb-10">
							{% include '_snippet/_nav/_breadcrumb' %}
						</div>
					{% endblock %}

					{% include '_snippet/_content/_pageTitle' %}
					{% include '_snippet/_content/_intro' %}
					{% include '_snippet/_item/_walkDetail' %}
				</div>
			</div>
		</div>
	</div>

	<div class="section section--default">
		<div class="container">
			<div class="md:flex md:flex-wrap">
				<div class="w-full px-10 py-10 bg-light md:w-1/3">
					<h2 class="text-xl uppercase">{{ 'Praktische info'|t }}</h2>

					<div class="mb-4">
						<h3 class="text-lg">{{ 'Adres'|t }}</h3>
						<svg class="w-5 h-5 mr-1 text-primary icon" aria-hidden="true">
							<use xlink:href="/icon/sprite.svg#place"></use>
						</svg>
						{{ entry.adress }}
					</div>

					<div class="mb-4">
						<h3 class="text-lg">{{ 'Openingsuren'|t }}</h3>
						{{ entry.openingsuren }}
					</div>

					<div class="mb-4">
						<h3 class="text-lg">{{ 'Prijs'|t }}</h3>
						{{ entry.prijs }}
					</div>

					<h3 class="text-lg">{{ 'Toegankelijkheid'|t }}</h3>
					{{ entry.toegankelijkheid }}

					<div class="text-center">
						<a class="mt-10 btn btn--primary" href="{{ entry.cta }}">{{ entry.cta.getText() }}</a>
					</div>
				</div>
				<div class="w-full md:w-2/3">
					{% include '_snippet/_content/_contentBuilder'
                    with {
                    settings : {
                        section: 'section',
                        container: 'container',
                    }
                        } %}

					{% include '_snippet/_content/_groepsbezoeken' %}
				</div>
			</div>
		</div>
	</div>

{% endblock %}
