{% extends "_layout" %}

{% block content %}
    
    <div class="section section--default">
        <div class="container">
            <div class="w-full md:w-3/4">
                {% include '_snippet/_content/_intro' %}
            </div>
        </div>
    </div>
    <div class="section section--default">
        <div class="container">
            {% set walks = craft.entries.section('walk').all() %}
            {% for walk in walks %}
                <a href="{{ walk.url }}">walk</a>
            {% endfor %}

            {% set monument = craft.entries.section('monument').all() %}
            {% for monu in monument %}
                <a href="{{ monu.url }}">monu</a>
            {% endfor %}

            {% set bezoeken = craft.entries.section('bezoekDetail').all() %}
            {% for bezoek in bezoeken %}
                <a href="{{ bezoek.url }}">bezoek</a>
            {% endfor %}
        </div>
    </div>

{% endblock %}
