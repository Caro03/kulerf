{% extends "_layout" %}

{% block content %}

	<div class="section section--default">
		<div class="container">
			<div class="w-full md:w-3/4">
				{% include '_snippet/_content/_pageTitle' %}
				{% include '_snippet/_content/_intro' %}
			</div>
		</div>
	</div>

	<div class="section section--default">
		<div class="container">
			{% set guides = craft.entries.section('walkDetail').all() %}
			<a class="mr-5 font-bold uppercase pb-5 text-primary border-b-4 border-primary {% if craft.app.request.getQueryParam('gids') == 1 %}text-tertiair border-none{% endif %}" href="{{ entry.url }}">{{ 'Wandelingen met gids'|t }}</a>
			<a class="font-bold uppercase {% if craft.app.request.getQueryParam('gids') == 1 %}pb-5 text-primary border-b-4 border-primary{% endif %}" href="/walk?gids=1">{{ 'Wandelingen met app'|t }}</a>
			<div class="mt-5 border-b-2 border-gray-500"></div>
		</div>
	</div>

	<div class="section section--default">
		<div class="container">
			<div class="md:-mx-4 md:flex md:flex-wrap">
				{% if craft.app.request.getQueryParam('gids') == 1 %}
					{% for guide in guides %}
						{% if guide.switchApp == 1 %}
							{% include '_snippet/_item/_walk' %}
						{% endif %}
					{% endfor %}

				{% else %}
					{% for guide in guides %}
						{% if guide.switchApp == 0 %}
							{% include '_snippet/_item/_walk' %}
						{% endif %}
					{% endfor %}
				{% endif %}
			</div>
		</div>
	</div>

{% endblock %}
